<resources>
    <!-- Default background color for the graph area -->
    <color name="tlcDefGraphBackgroundColor">#fff</color>

    <!-- Whether display the footer area by default -->
    <bool name="tlcDefShowFooter">true</bool>

    <!-- Default background color for the footer area -->
    <color name="tlcDefFooterBackgroundColor">#f2f2f2</color>

    <!-- Default height for the footer bar area -->
    <dimen name="tlcDefFooterBarHeight">56dp</dimen>

    <!-- Default bar item width -->
    <dimen name="tlcDefBarItemWidth">56dp</dimen>

    <!-- Default spaces between bar items -->
    <dimen name="tlcDefBarItemSpace">3dp</dimen>

    <!-- Default graph draw mode (default to tlcBarsStack) -->
    <integer name="tlcDefGraphMode">1</integer>

    <!-- Default play sound effect on item selection -->
    <bool name="tlcDefPlaySelectionSoundEffect">true</bool>

    <!-- Default play sound effect on item selection (default is 0 that means
         system default click sound effect) -->
    <integer name="tlcDefSelectionSoundEffectSource">0</integer>

    <!-- Default value for animate cursor transition -->
    <bool name="tlcDefAnimateCursorTransition">true</bool>

    <!-- Default behaviour when follow real time cursor updates -->
    <bool name="tlcDefFollowCursorPosition">false</bool>

    <!-- Default behaviour to always ensure a valid selection -->
    <bool name="tlcDefAlwaysEnsureSelection">true</bool>


    <!-- Default tick label values (for testing purposes) -->
    <string-array name="tlcDefTickLabelValues">
        <item>1451602799000</item>
        <item>1451602740000</item>
        <item>1451516400000</item>
    </string-array>

    <!-- Default tick label formats -->
    <string-array name="tlcDefTickLabelFormats">
        <item>HH:mm:ss</item>
        <item>HH:mm</item>
        <item>dd\u000AMMM\u000Ayyyy</item>
    </string-array>
</resources>