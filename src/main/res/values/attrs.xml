<resources>
    <declare-styleable name="tlcTimelineChartView">
        <!-- Background of the graph area -->
        <attr name="tlcGraphBackground" format="color" />

        <!-- Background of the footer area -->
        <attr name="tlcFooterBackground" format="color" />

        <!-- Whether display the footer -->
        <attr name="tlcShowFooter" format="boolean" />

        <!-- Footer bar height -->
        <attr name="tlcFooterBarHeight" format="dimension" />

        <!-- Bar item width -->
        <attr name="tlcBarItemWidth" format="dimension" />

        <!-- Space between bar items -->
        <attr name="tlcBarItemSpace" format="dimension" />

        <!-- Graph draw mode -->
        <attr name="tlcGraphMode" format="enum">
            <enum name="tlcBars" value="0" />
            <enum name="tlcBarsStack" value="1" />
            <enum name="tlcBarsSideBySide" value="2" />
        </attr>

        <!-- Whether play a sound effect when an item was selected -->
        <attr name="tlcPlaySelectionSoundEffect" format="boolean" />

        <!-- The sound effect to play when tlcPlaySelectionSoundEffect is true. Set to
            value 0 to use system default click effect -->
        <attr name="tlcSelectionSoundEffectSource" format="reference" />

        <!-- Whether animate cursor transition -->
        <attr name="tlcAnimateCursorTransition" format="boolean" />

        <!-- Whether follow real time cursor updates (live update). Only if
             scroll is in the last item -->
        <attr name="tlcFollowCursorPosition" format="boolean" />

        <!-- Whether move current view to the nearest selection if, after a user
             scroll/fling operation, the view is not centered in an item. If true move
             view to the nearest item and selected it -->
        <attr name="tlcAlwaysEnsureSelection" format="boolean" />
    </declare-styleable>
</resources>